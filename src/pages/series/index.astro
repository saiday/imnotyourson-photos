---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import { getImageUrl } from '../../utils/images';

// Get all posts, filter public ones, and sort by date (newest first)
const allPosts = await getCollection('posts');
const publicPosts = allPosts
  .filter(post => post.data.public)
  .sort((a, b) => b.data.created_at.getTime() - a.data.created_at.getTime());

const title = 'Series';
const description = 'A chronological collection of photo series and essays.';
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="series-index">
    <div class="container">
      <header class="page-header">
        <h1>Series</h1>
        <p class="page-description">A collection of photo essays exploring urban life, light, and moments.</p>
      </header>

      <div class="posts-grid">
        {publicPosts.map((post) => (
          <article class="post-card">
            <a href={`/posts/${post.slug}`} class="post-link">
              {post.data.featured_photo && (
                <div class="post-thumbnail">
                  <img
                    src={getImageUrl(post.data.featured_photo, { width: 960 })}
                    alt={post.data.photos.find(p => p.filename === post.data.featured_photo)?.alt || post.data.title}
                    loading="lazy"
                  />
                </div>
              )}
              <div class="post-content">
                <h2 class="post-title">{post.data.title}</h2>
                <time class="post-date" datetime={post.data.created_at.toISOString()}>
                  {post.data.created_at.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <p class="post-description">{post.data.description}</p>
              </div>
            </a>
          </article>
        ))}
      </div>

      {publicPosts.length === 0 && (
        <p class="empty-state">No posts yet. Check back soon!</p>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  .series-index {
    padding: 3rem 0 4rem;
    min-height: calc(100vh - 80px);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .post-card {
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-4px);
  }

  .post-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-thumbnail {
    aspect-ratio: 3 / 2;
    overflow: hidden;
    background-color: var(--color-border);
  }

  .post-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-thumbnail img {
    transform: scale(1.05);
  }

  .post-content {
    padding: 1.5rem 0;
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .post-date {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .post-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
  }

  .empty-state {
    text-align: center;
    color: var(--color-text-muted);
    padding: 4rem 0;
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }
</style>

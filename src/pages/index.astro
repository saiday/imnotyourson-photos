---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import { getImageUrl, getImageSrcset, getImageSizes } from '../utils/images';

// Get all public posts with featured photos
const allPosts = await getCollection('posts');
const publicPosts = allPosts
  .filter(post => post.data.public && post.data.featured_photo)
  .sort((a, b) => b.data.created_at.getTime() - a.data.created_at.getTime());

const featuredPhotos = publicPosts.map(post => ({
  filename: post.data.featured_photo!,
  slug: post.slug,
}));

const title = 'imnotyourson';
const description = 'It was me, I let the dogs out.';
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="homepage">
    <div class="hero">
      <div class="hero-images">
        {featuredPhotos.slice(0, 3).map((photo, index) => (
          <a href={`/${photo.slug}`} class="hero-image-link">
            <img
              src={getImageUrl(photo.filename, { width: 1920 })}
              srcset={getImageSrcset(photo.filename)}
              sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              loading={index === 0 ? 'eager' : 'lazy'}
              alt=""
            />
          </a>
        ))}
      </div>
      <div class="hero-content">
        <a href="/archive" class="hero-cta">View archive</a>
      </div>
    </div>
  </main>
</BaseLayout>


<style>
  .homepage {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 40px 40px;
  }

  .hero {
    position: relative;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
  }

  .hero-images {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    border-radius: 8px;
    overflow: hidden;
  }

  .hero-image-link {
    position: relative;
    display: block;
    aspect-ratio: 3 / 2;
    overflow: hidden;
    background-color: var(--color-border);
  }

  .hero-image-link img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .hero-image-link:hover img {
    transform: scale(1.05);
    opacity: 0.9;
  }

  .hero-content {
    position: absolute;
    bottom: 2rem;
    left: 0;
    right: 0;
    text-align: center;
    color: white;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    z-index: 10;
    pointer-events: none;
  }

  .hero-cta {
    display: inline-block;
    padding: 0.5rem 0;
    background-color: transparent;
    color: white;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    position: relative;
    transition: opacity 0.2s ease;
    pointer-events: auto;
  }

  /* Animated underline on hover */
  .hero-cta::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: white;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .hero-cta:hover {
    opacity: 0.8;
    text-decoration: none;
  }

  .hero-cta:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Tablet: 2 images */
  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-images {
      grid-template-columns: repeat(2, 1fr);
    }

    .hero-image-link:last-child {
      display: none;
    }
  }

  /* Mobile: 1 image */
  @media (max-width: 768px) {
    .homepage {
      padding: 20px 20px;
    }

    .hero-images {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .hero-image-link {
      aspect-ratio: 4 / 3;
    }

    .hero-image-link:nth-child(n+2) {
      display: none;
    }

    .hero-content {
      bottom: 1.5rem;
    }
  }
</style>

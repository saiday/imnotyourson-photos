---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import { getImageUrl, getImageSrcset, getImageSizes } from '../utils/images';

// Get all public posts with featured photos for homepage
const allPosts = await getCollection('posts');
const publicPosts = allPosts
  .filter(post => {
    const showInHomepage = post.data.show_in_homepage ?? true;
    return post.data.public && post.data.featured_photo && showInHomepage;
  })
  .sort((a, b) => b.data.created_at.getTime() - a.data.created_at.getTime());

const featuredPhotos = publicPosts.map(post => ({
  filename: post.data.featured_photo!,
  slug: post.slug,
  title: post.data.title,
}));

const title = 'imnotyourson';
const description = 'It was me, I let the dogs out.';
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="homepage">
    <div class="hero">
      <div class="hero-images">
        {featuredPhotos.slice(0, 3).map((photo, index) => (
          <div class="hero-item">
            <div class="hero-image-wrapper">
              <img
                src={getImageUrl(photo.filename, { width: 1920 })}
                srcset={getImageSrcset(photo.filename)}
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                loading={index === 0 ? 'eager' : 'lazy'}
                alt=""
              />
            </div>
            <a href={`/${photo.slug}`} class="hero-title">
              {photo.title}
            </a>
          </div>
        ))}
      </div>
      <div class="hero-content">
        <a href="/archive" class="hero-cta">View archive</a>
      </div>
    </div>
  </main>
</BaseLayout>


<style>
  .homepage {
    min-height: 100vh;
    display: flex;
    align-items: flex-start;
    padding: 80px 40px 40px 40px;
  }

  .hero {
    position: relative;
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
  }

  .hero-images {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    align-items: start;
  }

  .hero-item {
    display: flex;
    flex-direction: column;
  }

  .hero-image-wrapper {
    position: relative;
    display: block;
    aspect-ratio: 5 / 3;
    overflow: hidden;
    background-color: var(--color-border);
    border-radius: 8px;
  }

  .hero-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-title {
    display: block;
    margin-top: 0.75rem;
    color: #DDDBD9;
    text-decoration: none;
    font-size: 1.125rem;
    line-height: 1.6;
    transition: opacity 0.2s ease;
  }

  .hero-title:hover {
    opacity: 0.6;
    text-decoration: none;
  }

  .hero-content {
    margin-top: 2rem;
    text-align: center;
    color: white;
  }

  .hero-cta {
    display: inline-block;
    padding: 0.5rem 0;
    background-color: transparent;
    color: #DDDBD9;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    position: relative;
    transition: opacity 0.2s ease;
  }

  /* Animated underline on hover */
  .hero-cta::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #DDDBD9;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .hero-cta:hover {
    opacity: 0.8;
    text-decoration: none;
  }

  .hero-cta:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Tablet: 2 images */
  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-images {
      grid-template-columns: repeat(2, 1fr);
    }

    .hero-item:last-child {
      display: none;
    }
  }

  /* Mobile: 1 image */
  @media (max-width: 768px) {
    .homepage {
      padding: 40px 20px 20px 20px;
    }

    .hero-images {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .hero-image-wrapper {
      aspect-ratio: 4 / 3;
    }

    .hero-item:nth-child(n+2) {
      display: none;
    }

    .hero-title {
      font-size: 1rem;
    }

    .hero-content {
      margin-top: 1.5rem;
    }
  }
</style>

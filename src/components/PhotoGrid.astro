---
import { getImageUrl, getImageSrcset, getImageSizes, RESPONSIVE_WIDTHS } from '../utils/images';

export interface Photo {
  filename: string;
  alt?: string;
}

interface Props {
  photos: Photo[];
}

const { photos } = Astro.props;
---

<div class="photo-grid" data-fancybox-gallery>
  {photos.map((photo) => (
    <a
      href={getImageUrl(photo.filename, { width: RESPONSIVE_WIDTHS[RESPONSIVE_WIDTHS.length - 1], quality: 100 })}
      data-fancybox="gallery"
      class="photo-item"
    >
      <img
        src={getImageUrl(photo.filename, { width: 960 })}
        srcset={`${getImageUrl(photo.filename, { width: 960 })} 960w`}
        sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
        loading="lazy"
      />
    </a>
  ))}
</div>

<script>
  import { Fancybox } from '@fancyapps/ui';
  import '@fancyapps/ui/dist/fancybox/fancybox.css';

  // Initialize Fancybox with minimal UI
  Fancybox.bind('[data-fancybox="gallery"]', {
    // Remove all toolbar elements
    Toolbar: false,
    closeButton: false,

    // Disable thumbnails
    Thumbs: false,

    // Fade animation
    showClass: 'f-fadeIn',
    hideClass: 'f-fadeOut',

    // Close on background click
    backdropClick: 'close',

    // Keyboard navigation
    keyboard: {
      Escape: 'close',
      Delete: 'close',
      Backspace: 'close',
      PageUp: 'next',
      PageDown: 'prev',
      ArrowUp: 'prev',
      ArrowDown: 'next',
      ArrowRight: 'next',
      ArrowLeft: 'prev',
    },

    // Image settings
    Image: {
      zoom: false,
    },

    animated: true,
  });
</script>

<style>
  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
    margin: 2rem 0;
    grid-auto-rows: auto; /* Allow rows to size naturally */
  }

  .photo-item {
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    cursor: pointer;
    display: block;
    background-color: var(--color-border);
  }

  .photo-item img {
    width: 100%;
    height: auto; /* Changed from 100% to preserve aspect ratio */
    object-fit: contain; /* Changed from cover to respect aspect ratios */
    transition: transform 0.3s ease, opacity 0.3s ease;
    display: block;
  }

  .photo-item:hover img {
    transform: scale(1.02); /* Reduced from 1.05 for subtlety */
    opacity: 0.9;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .photo-grid {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .photo-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1025px) {
    .photo-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.25rem;
    }
  }

  /* Fancybox dark theme customization */
  :global(.fancybox__backdrop) {
    background-color: rgba(0, 0, 0, 0.95);
  }

  :global(.fancybox__slide) {
    padding: 2rem;
  }

  /* Fade transitions */
  :global(.f-fadeIn) {
    animation: fadeIn 0.3s ease-in-out;
  }

  :global(.f-fadeOut) {
    animation: fadeOut 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
  }
</style>

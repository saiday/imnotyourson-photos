---
import { getImageUrl, getImageSrcset, getImageSizes, RESPONSIVE_WIDTHS } from '../utils/images';

export interface Photo {
  filename: string;
  alt?: string;
}

interface Props {
  photos: Photo[];
}

const { photos } = Astro.props;
---

<div class="photo-grid" data-fancybox-gallery>
  {photos.map((photo) => (
    <a
      style={photo.width && photo.height ? `--width: ${photo.width}; --height: ${photo.height};` : undefined}
      href={getImageUrl(photo.filename, { width: RESPONSIVE_WIDTHS[RESPONSIVE_WIDTHS.length - 1], quality: 100 })}
      data-fancybox="gallery"
      class={photo.width && photo.height ? "photo-item" : "photo-item photo-item-fallback"}
    >
      <img
        src={getImageUrl(photo.filename, { width: 960 })}
        srcset={`${getImageUrl(photo.filename, { width: 960 })} 960w`}
        sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
        loading="lazy"
      />
    </a>
  ))}
</div>

<script>
  import { Fancybox } from '@fancyapps/ui';
  import '@fancyapps/ui/dist/fancybox/fancybox.css';

  // Initialize Fancybox with minimal UI
  Fancybox.bind('[data-fancybox="gallery"]', {
    // Remove all toolbar elements
    Toolbar: false,
    closeButton: false,

    // Disable thumbnails
    Thumbs: false,

    // Close on background click
    backdropClick: 'close',

    // Keyboard navigation
    keyboard: {
      Escape: 'close',
      Delete: 'close',
      Backspace: 'close',
      PageUp: 'next',
      PageDown: 'prev',
      ArrowUp: 'prev',
      ArrowDown: 'next',
      ArrowRight: 'next',
      ArrowLeft: 'prev',
    },

    // Image settings
    Image: {
      zoom: false,
    },

    animated: true,
  });
</script>

<style>
  .photo-grid {
    --min-height: clamp(200px, 20vw, 400px);
    display: flex;
    flex-wrap: wrap;
    gap: max(1.5vw, 12px);
    margin: 2rem 0;
  }

  .photo-item {
    flex-grow: calc(var(--width) * (100000 / var(--height)));
    flex-basis: calc(var(--min-height) * (var(--width) / var(--height)));
    aspect-ratio: var(--width) / var(--height);
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    cursor: pointer;
    background-color: var(--color-border);
  }

  .photo-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .photo-item:hover img {
    transform: scale(1.02);
    opacity: 0.9;
  }

  /* Fallback for photos without dimensions */
  .photo-item-fallback {
    flex: 1 1 300px;
    aspect-ratio: auto;
  }

  .photo-item-fallback img {
    height: auto;
    object-fit: contain;
  }

  /* Force last row to justify left */
  .photo-grid::after {
    content: "";
    flex-grow: 1000000000;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .photo-grid {
      --min-height: clamp(150px, 30vw, 300px);
      gap: 0.75rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .photo-grid {
      --min-height: clamp(180px, 25vw, 350px);
      gap: 1rem;
    }
  }

  /* Fancybox dark theme customization */
  :global(.fancybox__backdrop) {
    background-color: rgba(0, 0, 0, 0.95);
  }

  :global(.fancybox__slide) {
    padding: 2rem;
  }
</style>

---
const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <div class="container">
    <a href="/" class="site-title">imnotyourson</a>
    <nav class="site-nav">
      <a href="/archive" class:list={['nav-link', { active: currentPath.startsWith('/archive') }]}>
        archive
      </a>
    </nav>
  </div>
</header>

<style>
  .site-header {
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
  }

  .site-title:hover {
    text-decoration: none;
    opacity: 0.7;
  }

  .site-nav {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-text);
    text-decoration: none;
  }

  .nav-link.active {
    color: var(--color-text);
  }
</style>
